<configuration>
    <!-- Console appender to output logs to stdout -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="org.testcontainers" level="INFO"/>
    <logger name="org.springframework.cloud.gateway" level="INFO"/>
    <logger name="org.springframework.data.redis" level="INFO"/>
    <logger name="org.springframework.cloud.gateway.filter.ratelimit" level="INFO"/>

    <logger name="org.springframework.boot.context.properties" level="DEBUG"/>



    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>
</configuration>
